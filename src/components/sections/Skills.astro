            {skill.icon}
          </div>
          <h3 class="text-[1.1rem] font-semibold mb-3">{skill.title}</h3>
          <div class="flex flex-wrap gap-2">
            {skill.tags.map((tag) => (
              <span class="font-mono text-xs px-3 py-[0.35rem] bg-[var(--color-bg-primary)] border border-[var(--color-border)] rounded-md text-[var(--color-text-secondary)]">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
